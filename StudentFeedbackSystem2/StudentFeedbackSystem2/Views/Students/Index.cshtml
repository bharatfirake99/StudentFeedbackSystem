@model IEnumerable<StudentFeedbackSystem2.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>List Of Feedback</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback)
            </th>
            <th><p>
                <a asp-action="Create" class="btn btn-sm btn-success">
                    <i class="fa-solid fa-plus"></i> New
                </a>
            </p></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RollNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RollNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RollNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
